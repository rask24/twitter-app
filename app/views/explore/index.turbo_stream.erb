<%= turbo_stream.replace :search_new do %>
  <div class="p-3">
    <%= search_form_for @search, url: search_index_path, data: { turbo_frame: :search_tweets_list, turbo_action: :active } do |f| %>
      <div class="py-2 px-5 bg-gray-200 rounded-full">
        <%= f.search_field :text_cont, placeholder: 'キーワードを検索', class: 'bg-gray-200 w-full outline-none' %>
      </div>
    <% end %>
  </div>
<% end %>

<%= turbo_stream.replace :search_tweets_list do %>
  <%= turbo_frame_tag "search_tweets_list_#{@tweets.current_page}" do %>
    <ul>
      <% @tweets.each do |tweet| %>
        <%= render partial: 'share/tweet_item', locals: { tweet: tweet } %>
      <% end %>
      <%= turbo_frame_tag "search_tweets_list_#{@tweets.next_page}", loading: :lazy, src: path_to_next_page(@tweets) %>
    </ul>
  <% end %>
<% end %>
