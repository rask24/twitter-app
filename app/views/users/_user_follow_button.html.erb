<% if user_signed_in?%>
  <% if current_user.id == @user.id %>
    <%= button_to 'Settings', disabled: true %>
  <% elsif @user_info[:following_info].nil? %>
    <%= button_to 'Follow',
      follows_path,
      method: :post,
      params: {
        follower_id: current_user.id,
        followee_id: @user.id,
        from: @user_info[:from],
      } 
    %>
  <% else %>
    <%= button_to 'Unfollow',
      follow_path(@user_info[:following_info].id),
      method: :delete,
      params: { from: @user_info[:from] }
    %>
  <% end %>
<% else %>
  <% button_to 'follow(disable)', disabled: true %>
<% end %>