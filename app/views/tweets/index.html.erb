<h1>Twitter</h1>
<h2><%= current_user.name %></h2>
<%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: 'delete'} %>
<%= turbo_frame_tag :tweets_list do %>
  <%= form_with model: @new_tweet do |f| %>
    <div>
      <%= f.text_field :text %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
  <ul>
    <% @tweets.each do |tweet| %>
      <li>
        <%= tweet.user.name %>
        <%= tweet.text %>
      </li>
    <% end %>
  </ul>
<% end %>