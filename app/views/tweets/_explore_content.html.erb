<h2 class="text-lg font-bold p-3">話題を検索</h2>
<%= turbo_frame_tag "explore_tweets_list_#{@tweets.current_page}" do %>
  <ul>
    <% @tweets.each do |tweet| %>
      <%= render partial: 'share/tweet_item', locals: { tweet: tweet, from: 'tweets_explore' } %>
    <% end %>
    <%= turbo_frame_tag "explore_tweets_list_#{@tweets.next_page}", loading: :lazy, src: path_to_next_page(@tweets) %>
  </ul>
<% end %>
