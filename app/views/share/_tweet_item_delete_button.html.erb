<% if user_signed_in? %>
  <% if from == 'tweets_show' %>
    <div class="h-16 flex items-end">
      <% if tweet[:content].user_id == current_user.id %>
        <%= button_to tweet_path(tweet[:content].id),
          method: :delete,
          params: {
            from: tweet[:current_page],
            user_id: current_user.id
          } do %>
          <svg class="fill-gray-500 hover:fill-red-300 h-5 w-5">
            <use xlink:href="#icons-trash"></use>
          </svg>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="">
      <% if tweet[:content].user_id == current_user.id %>
        <%= button_to tweet_path(tweet[:content].id),
          method: :delete,
          params: {
            from: tweet[:current_page],
            user_id: current_user.id
          } do %>
          <svg class="fill-gray-500 hover:fill-red-300 h-5 w-5">
            <use xlink:href="#icons-trash"></use>
          </svg>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
