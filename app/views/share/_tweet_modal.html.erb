<div data-controller="modal" data-modal-hidden-class="hidden">
  <div data-action="click->modal#open" class="w-full text-center border mb-4 text-lg py-2 px-3 rounded-full bg-twitter-primary text-white font-bold">
    ツイートする
  </div>
  <div data-modal-target="window" class="hidden bg-black bg-opacity-20 w-screen h-screen fixed top-0 left-0 right-0 z-50 overflow-x-hidden overflow-y-auto">
    <div class="relative top-20 mx-auto w-full h-full">
      <div class="bg-white w-96 mx-auto rounded-lg">
        <div class="px-3 h-10 flex items-center">
          <div data-action='click->modal#close' class="h-auto rounded-full hover:bg-gray-200">
            <svg class="fill-gray-500 hover:fill-gray-800 h-5 w-5">
              <use xlink:href="#icons-cancel"></use>
            </svg>
          </div>
        </div>
        <div class="px-3">
          <%= turbo_frame_tag :tweet_new, src: new_tweet_path, loading: :lazy %>
        </div>
      </div>
    </div>
  </div>
</div>
