<div class="container h-screen mx-auto flex justify-center">
  <div class="basis-3/12 flex justify-end">
    <div class="px-4">
      <%= render partial: 'share/navigation' %>
    </div>
  </div>
  <div class="basis-6/12 border-x overflow-y-scroll p-3">
    <h2 class="text-lg font-bold">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="border border-gray-300 rounded-lg p-2 my-3">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text-lg focus:border-b focus:border-twitter-primary outline-none w-full" %>
      </div>
      <div class="border border-gray-300 rounded-lg p-2 my-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "text-lg focus:border-b focus:border-twitter-primary outline-none w-full" %>
      </div>
      <div class="flex justify-end">
        <div class="flex flex-col">
          <div class="w-32 text-center border my-3 py-1 px-3 rounded-full bg-twitter-primary text-white font-bold">
            <%= f.submit 'ログイン' %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="basis-3/12">
    <%= render partial: 'share/right_sidebar' %>
  </div>
</div>
